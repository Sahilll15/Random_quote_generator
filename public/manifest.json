{
  "manifest_version": 3,
  "name": "Random Quote Generator",
  "version": "1.0",
  "description": "Displays a random quote when you click the extension icon.",
  "icons": {
    "48": "logo192.png",
    "128": "logo512.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "48": "logo192.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://api.quotable.io/*"
  ]
}